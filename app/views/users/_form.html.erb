    </div>
  <% end %>

  <div class="field">
    <%= f.select :title, options_for_select(User.titles.map{|t| t[0] })%>
  </div>
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.text_field :birth_date %>
  </div>
  <div class="field">
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.select :income_bracket, options_for_select(IncomeBracket.all.map{|ib| [ib.to_s,ib.id] })%>
  </div>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
