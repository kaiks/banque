<%= bootstrap_form_tag url: sessions_new_url, method: :post do |f| %>
  <% if @current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_user.errors.count, "error") %> erreurs:</h2>
      <ul>
      <% @current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.text_field :id, maxlength: 10 %>
    </div>
  <div class="field">
    <%= f.password_field :password, maxlength: 100, label: 'Mot de passe' %>
  </div>
  <div class="actions row">
    <div class="col-md-5 col-sm-6 col-xs-6">
    <%= f.submit 'Connecter', class: "btn btn-primary btn-block" %>
    </div>
    <div class="col-md-2 col-sm-1 col-xs-1"></div>
    <div class="col-md-5 col-sm-6 col-xs-6 text-right">
      <%= link_to 'S\'enregistrer', new_user_path, class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>